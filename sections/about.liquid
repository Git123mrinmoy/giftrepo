{% schema %}
{
  "name": "About Setting",
  "blocks": [
    {
      "type": "text",
      "name": "How It Works",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text_heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Subtext Details</p>",
          "label": "Subtext"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Image",
      "id": "about_banner"
    },
    {
      "type": "image_picker",
      "label": "Left Image",
      "id": "about_left_img"
    },
    {
      "type": "textarea",
      "label": "Right Text",
      "id": "right_text"
    },
    {
      "type": "image_picker",
      "label": "Right Image",
      "id": "about_right_img"
    },
    {
      "type": "textarea",
      "label": "Left Text",
      "id": "left_text"
    }
  ]
}
{% endschema %}
