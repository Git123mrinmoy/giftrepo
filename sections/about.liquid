<section class="inner-banner">
  <img class="img-fluid" src="{{ section.settings.about_banner | img_url: 'master' }}" alt="">
  <div class="inner-banner-cont">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1>{{ page_title }}</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="thelastminutegifts-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-5 mb-4 mb-md-0" data-aos="fade-left">
        <div class="thelastminutegifts-left-img">
          <img class="img-fluid" src="{{ section.settings.about_left_img | img_url: 'master' }}" alt="">
        </div>
      </div>
      <div class="col-12 col-md-7" data-aos="fade-right">
        <div class="thelastminutegifts-right-content">
          {{ section.settings.right_text }}
          <a class="btn btn-gradient" href="/collections">Shop Now <i class="fa-solid fa-arrow-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="gifts-for-children-wrapper">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-7 mb-4" data-aos="fade-left">
        <div class="gifts-for-children-content">
          {{ section.settings.left_text }}
          <a class="btn btn-info-light" href="/collections">Shop Now <i class="fa-solid fa-arrow-right"></i></a>
        </div>
      </div>
      <div class="col-12 col-md-5" data-aos="fade-right">
        <div class="gifts-children-right-img">
          <img class="img-fluid" src="{{ section.settings.about_right_img | img_url: 'master' }}" alt="">
        </div>
      </div>
    </div>
  </div>
</section>

