<section class="inner-banner">
  <img class="img-fluid" src="{{ section.settings.contact_banner | img_url: 'master' }}" alt="">
  <div class="inner-banner-cont">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1>{{ page_title }}</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="contact-us-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 offset-md-3 mb-4">
        <div class="contact-form-wrap">
          <div class="comon-title mb-4">
            <h3>Contact us today!</h3>
          </div>

          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <div class="form-group">
                <p class="btn-gradient">{{ 'templates.contact.form.post_success' | t }}</p>
              </div>
            {% endif %}
            <div class="contact-form-inner">
              <div class="form-group mb-3">
                {% comment %} <input type="text" id="" class="form-control" placeholder="Name"> {% endcomment %}
                <input type="text" name="contact[name]" class="form-control" placeholder="Name" required>
              </div>
              <div class="form-group mb-3">
                {% comment %} <input type="email" id="" class="form-control" placeholder="Email"> {% endcomment %}
                <input type="email" name="contact[email]" class="form-control" placeholder="Email" required>
              </div>
              <div class="form-group mb-3">
                {% comment %} <input type="text" id="" class="form-control" placeholder="Phone"> {% endcomment %}
                <input type="tel" class="form-control" name="contact[phone]" placeholder="Phone">
              </div>
              <div class="form-group mb-3">
                {% comment %} <textarea class="form-control" rows="5" id="comment" placeholder="Message"></textarea> {% endcomment %}
                <textarea
                  class="form-control"
                  rows="5"
                  id="comment"
                  name="contact[message]"
                  placeholder="Message"
                ></textarea>
              </div>
              <div class="form-group">
                <input class="btn btn-gradient" type="submit" name="" value="Send Message">
              </div>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Setting",
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Image",
      "id": "contact_banner"
    }
  ]
}
{% endschema %}
