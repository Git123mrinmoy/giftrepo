{% comment %}
  The above code creates a new template for single product pages.
  You can customize this template to suit your specific design and requirements.
{% endcomment %}

{% assign product = product %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ product.title }}</title>
  <!-- Add your stylesheets, scripts, and other head elements as needed -->
</head>
<body>

  <div>
    <h1>{{ product.title }}</h1>
    <p>{{ product.description }}</p>
    <p>Price: {{ product.price | money }}</p>

    <!-- Add more product details as needed -->

    {% if product.available %}
      <form action="/cart/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <input type="submit" value="Add to Cart">
      </form>
    {% else %}
      <p>This product is currently unavailable.</p>
    {% endif %}
  </div>

  <!-- Add your footer content as needed -->

</body>
</html>
